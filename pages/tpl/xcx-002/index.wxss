/**index.wxss**/
/* 首页板块标题 */
/* banner轮播图 */
.banner{width: 100%;}
.banner swiper{width: 100%;height: 800rpx;}
.banner swiper .wx-swiper-dot{background-color: #e5e5e5;width: 45rpx;height: 8rpx;border-radius: 20rpx;}
.banner swiper .wx-swiper-dot-active{background-color: #2f944e;}
.banner swiper .wx-swiper-dots.wx-swiper-dots-horizontal{bottom: 30rpx;}
.banner image{height: 750rpx; width: 100%;}

.title{text-align: center;line-height: 1.5;position: relative;}
.title .cn{line-height: 48rpx;color: #2f944e;font-size: 46rpx;display: block;}
.title .en{color: #999999;font-size: 26rpx;text-transform: uppercase;background: #fff;padding: 0 0.5em ;position: relative;z-index: 2;}
.title .line{background: #999999;height: 1px;position: absolute;display: block;bottom: 20rpx;left: 25%;right: 25%;}

.box1 {padding-bottom: 50rpx;}
.box1 .img{width: 50%;height: 350rpx;border-radius: 10rpx;}
.box1 .txt{width: 45%;box-sizing: border-box;position: relative;text-align: left;margin-right: 5%;padding-top: 100rpx;}
.box1 .txt .p{font-size: 36rpx;color: #2f944e;}
.box1 .txt .span{font-size: 26rpx;color: #808080;display: block;margin: 0.8em 0;}
.box1 .txt .a{font-size: 26rpx;color: #808080;display: block;padding: 5rpx 0;
	border: 1px solid #eeeeee;margin-top: 1em;width: 6em;text-align: center;
}
.box1 .class-item:nth-of-type(2) .txt{position: absolute;right: 0;margin-right: 0;}

.box2{border-top: 15rpx solid #eeeeee;padding-top:70rpx;}
.box2 .pro_img {height: 340rpx;width: 340rpx;background: #f5f5f5;border-radius: 10rpx;}
.box2 .product-item{width: 340rpx;margin-bottom: 50rpx;}
.box2 .product-item:nth-child(2n){margin-left: 30rpx;}

.box3{padding: 70rpx 0;border-top: 15rpx solid #eeeeee;width: 100%;}
.box3 .case_img{width: 100%;height: 410rpx;border-radius: 10rpx;overflow: hidden;}
.box3 swiper-item{width: 100%;}
.box3 swiper{width: 100%;height: 510rpx;}
.box3 swiper .wx-swiper-dot{background-color: #dcdcdc;width: 40rpx;height: 6rpx;border-radius: 3rpx;}
.box3 swiper .wx-swiper-dot-active{background-color: #2f944e;}
.box3 swiper .wx-swiper-dots.wx-swiper-dots-horizontal{bottom: 50rpx;}

/* 新闻板块 */
.box4{border-top: 15rpx solid #eeeeee;padding-top:70rpx;}
.box4 .title{text-align: left;}
.box4 .title .cn{display: inline;margin-right: 0.3em;}
.news-list .news-item{width: 100%;overflow: hidden;padding:40rpx 0;}
.news-list navigator{border-top: 1px solid #d2d2d2;}
.news-list navigator:last-child{border-bottom: 1px solid #d2d2d2;}
.news-list .news-item .img{width: 40%;height: 200rpx;}
.news-list .news-item .txt{width: 55%;box-sizing: border-box;position: relative;text-align: left;margin-right: 5%;padding-top: 15rpx;}
