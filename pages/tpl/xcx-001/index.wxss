/* pages/tpl/xcx-001/index.wxss */
/**index.wxss**/
/* 首页板块标题 */
.com_head{
    width: 100%;
    height: 48rpx;
  }
  .com_head .head_cha{
    line-height: 48rpx;
    font-weight: bold;
    color: #4682ca;
    font-size: 40rpx;
    margin-right: 20rpx;
  }
  .com_head .head_eng{
    line-height: 22rpx;
    height: 22rpx;
    color: #999999;
    font-size: 22rpx;
    padding-left: 20rpx;
    border-left: 1px solid #999;
    margin-top: 12rpx;
  }
  .com_head .more{
    line-height: 48rpx;
    color: #4682ca;
    font-size: 36rpx;
    float: right;
    font-weight: 300; 
    font-family: "SourceHanSansCN";
  }
  .blue_line{
    width: 100rpx;
    height: 8rpx;
    border-radius: 20rpx;
    background-color: #1471e2;
    margin: 20rpx auto;
  }
  /* banner轮播图 */
  .banner{
    width: 100%;
  }
  .banner swiper{
    width: 100%;
    height: 480rpx;
  }
  .banner swiper .wx-swiper-dot{
    background-color: #e5e5e5;
    width: 45rpx;
    height: 8rpx;
    border-radius: 20rpx;
  }
  .banner swiper .wx-swiper-dot-active{
    background-color: #4682ca;
  }
  .banner swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
    bottom: 50rpx;
  }
  .banner_img{
    width: 100%;
  }
  /* 产品板块 */
  .product{
    width: 100%;
    padding: 30rpx 20rpx 20rpx;
    box-sizing: border-box;
    overflow: hidden;
  }
  .product .pro_class{
    width: 100%;
  }
  .product .pro_class swiper{
    height: 280rpx;
    border-bottom: 1px solid #eeeeee;
  }
  .product .pro_class swiper-item{
    width: 100%!important;
    padding: 6rpx;
    box-sizing: border-box;
  }
  .product .pro_class swiper-item .proClass_img{
    width: 100%;
    height: 200rpx;
    border-radius: 10rpx;
    position: relative;
  }
  .product .pro_class swiper-item .proClass_img .className{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
    line-height: 200rpx;
    z-index: 1;
  }
  .product .pro_class swiper-item .proClass_img .zzc{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }
  .product swiper .wx-swiper-dot{
    background-color: #e5e5e5;
    width: 45rpx;
    height: 8rpx;
    border-radius: 20rpx;
  }
  .product swiper .wx-swiper-dot-active{
    background-color: #4682ca;
  }
  .product .pro_class swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
    bottom: 30rpx;
  }
  .product .pro_recommendmend{
    width: 100%;
    padding-top: 30rpx;
    overflow: hidden;
  }
  .product .pro_recommendmend .recom_con{
    width: 100%;
    margin-top: 30rpx;
    overflow: hidden;
  }
  .product .pro_recommendmend .recom_con .con_item{
    width: 48%;
    margin: 10rpx 1%;
    float: left;
    height: 350rpx;
  }
  .product .pro_recommendmend .recom_con .con_item .pro_img{
    width: 100%;
    height: 300rpx;
    border-radius: 10rpx;
  }
  .product .pro_recommendmend .recom_con .con_item .pro_name{
    width: 100%;
    line-height: 40rpx;
    text-align: center;
    color: #999;
    font-size: 30rpx;
  }
  /* 关于我们 */
  .about{
    width: 100%;
    padding: 30rpx 20rpx 20rpx;
    box-sizing: border-box;
    overflow: hidden;
  }
  .about .about_con{
    width: 100%;
    margin-top: 30rpx;
    padding-bottom: 30rpx;
    border-bottom: 1px solid #eeeeee;
  }
  .about .about_con .about_ban{
    width: 100%;
    height: 450rpx;
  }
  .about .about_con .about_name{
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #333;
    font-size: 40rpx;
    font-weight: 600;
    margin-top: 26rpx;
  }
  .about .about_con .about_txt{
    width: 100%;
    line-height: 45rpx;
    color: #808080;
    font-size: 30rpx;
  }
  /* 新闻板块 */
  .news{
    width: 100%;
    padding: 30rpx 20rpx 20rpx;
    box-sizing: border-box;
    overflow: hidden;
  }
  .news{
    width: 100%;
    padding: 30rpx 20rpx 20rpx;
    box-sizing: border-box;
    overflow: hidden;
  }
  .news .news_con{
    width: 100%;
    margin-top: 40rpx;
    overflow: hidden;
  }
  .news .news_con .con_item{
    width: 100%;
    margin-bottom: 20rpx;
    overflow: hidden;
  }
  .news .news_con .con_item .con_img{
    width: 30%;
    display: block;
    float: left;
    height: 200rpx;
  }
  .news .news_con .con_item .con_right{
    width: 70%;
    float: right;
    padding: 20rpx 0 20rpx 4%;
    box-sizing: border-box;
    position: relative;
    height: 200rpx;
  }
  .news .news_con .con_item .con_right .news_title{
    width: 100%;
    font-size: 32rpx;
    color: #333333;
  }
  .news .news_con .con_item .con_right .news_time{
    width: 100%;
    font-size: 28rpx;
    color: #999999;
    position: absolute;
    left: 32rpx;
    bottom: 6px;
  }