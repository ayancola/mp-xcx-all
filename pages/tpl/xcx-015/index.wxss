/**index.wxss**/
.container{padding-bottom: 116rpx;}
.banner{width: 100%;}
.banner swiper{width: 100%;height: 600rpx;}
.banner swiper .wx-swiper-dot,.box-case swiper .wx-swiper-dot{background-color: rgba(255,255,255,0.3);width: 45rpx;height: 8rpx;border-radius: 20rpx;}
.banner swiper .wx-swiper-dots.wx-swiper-dots-horizontal{bottom: 30rpx;}
.banner image{height: 600rpx; width: 100%;}
.viewmore{border-radius: 0.4em !important;padding: 0.3em 0;}
.bold{font-weight: bold;}

.b-title{border-left: 4rpx solid #fff;box-sizing: border-box;padding-left: 24rpx;}
.b-title .cn{font-weight: bold;margin-right: 0.6em;}
.b-title .en{color: #999999; text-transform: uppercase;font-size: 24rpx;}

.i1{padding: 50rpx 0;border-bottom-left-radius: 15rpx;border-bottom-right-radius: 15rpx;box-shadow: 0 5rpx 15rpx 0 rgba(0,0,0,0.1);}
.i1 .list view{height: 100rpx;width: 100rpx;border-radius: 50%;box-shadow: 0 5rpx 10rpx 0 rgba(240,131,0,0.3);position: relative;
	margin: 0 auto 20rpx auto;
}
.i1 .list view image{height: 60rpx;position: absolute;top: 50%;left: 50%;margin-left: -30rpx;margin-top: -30rpx;width: 60rpx;}
.i1 .list navigator{width: 25%;}
.i1 .list view text{margin-top: 14rpx;}
.i1 .title{background: url(http://qs.demo.pbinfo.cn/wxapp/xcx-015/img/tbg.png) center no-repeat;
	background-size: 511rpx auto;text-align: center;position: relative;font-size: 30rpx;text-align: center;
}

.box-class{box-sizing: border-box;}
.box-class .product-class{padding-top: 80rpx;
	background: url(http://qs.demo.pbinfo.cn/wxapp/xcx-015/img/cbg.jpg) top left no-repeat;background-size: 100% auto;
}
.box-class .list-item{position: relative;background: #fff;box-shadow: 0 5rpx 5rpx 0 rgba(0,0,0,0.1);}
.box-class .list-item + .list-item{margin-top: 26rpx;}
.box-class .list-item .img{width: 325rpx !important;height: 284rpx !important;margin-right: 23rpx;}
.box-class .list-item .txt{box-sizing: border-box;padding-top: 48rpx;}
.box-class .list-item .more{display: block; color: #fff;border-radius: 12rpx;line-height: 1.5;padding: 0.4em 0;
	width: 7.6em;text-align: center;font-size: 24rpx;
}

.box-product {padding-top: 60rpx;}
.box-product .T{background: url(http://qs.demo.pbinfo.cn/wxapp/xcx-015/img/pbg.jpg) left top no-repeat;background-size: 452rpx 100%;
    padding: 100rpx 0rpx 90rpx 450rpx;box-sizing: border-box;text-align: center;
}
.box-product .more{background: #fff;border-radius: 10rpx;padding: 0.2em 0;width: 8em; box-sizing: border-box;text-align: center;display: block;}
.box-product .list-item{width: 48.5%;margin-bottom: 38rpx;background: #f2f2f2;border-top-right-radius: 15rpx;overflow: hidden;
	position: relative;
}
.box-product .list-item .ico{background: #be2014;color: #fff;font-size: 24rpx;padding: 0.3em 0;width: 4em;line-height: 1.5;
	position: absolute;top: 0;left: 0;border-bottom-right-radius: 15rpx;text-align: center;
}
.box-product .list-item:nth-child(2n){margin-left: 3%;}
.box-product .list-item .img{width: 100%;height: 310rpx;}
.box-product .list-item .txt{display: block;width: 100%;padding: 26rpx 15rpx 15rpx 15rpx;line-height: 1.8; text-align: left;box-sizing: border-box;}
.box-product .list-item .price{color: #be2014;font-weight: bold;padding-right: 35rpx;box-sizing: border-box;
	background: url(http://qs.demo.pbinfo.cn/wxapp/xcx-015/img/cart.png) right center no-repeat;background-size: 28rpx auto;
}
.box-product .list-item .price text{font-size: 0.8em;font-weight: normal;}

/* 新闻板块 */
.box-news{padding-bottom: 60rpx;}
.box-news,.box-product{border-top: 15rpx solid #f5f5f5;padding-top: 60rpx;}
.news-list .news-item{width: 100%;overflow: hidden;border-radius: 15rpx;overflow: hidden;height: 423rpx;position: relative;}
.news-list .news-item .img{width: 100%;height: 100%;}
.news-list .news-item + .news-item {margin-top: 40rpx;}
.news-list .news-item .txt{width: 100%;box-sizing: border-box;text-align: center;position: absolute;z-index: 1;
    width: 100%;height: 100%;padding: 144rpx 70rpx 10rpx 70rpx;background: rgba(0, 0, 0, 0.5);
}
