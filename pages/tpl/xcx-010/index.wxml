<!--pages/tpl/mp-xcx-010/index.wxml-->
<view class="globalNavBar">
    <TabBar iconPath="{{iconUrl}}" current="{{0}}" main_color="{{main_color}}"></TabBar>
</view>
<view class="container">
    <view class="banner">
        <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" duration="{{duration}}"  indicator-active-color="#ffffff">
            <block wx:for="{{banner_img}}" wx:key="id">
                <swiper-item>
                    <image src="{{item}}" class="banner_img" mode="{{fill}}"></image>
                </swiper-item>
            </block>
        </swiper>
    </view>
    <view class="box-case w-100 text-right mt-60"> 
        <view class="w-93 m-ot title text-left">
            <view class="cn" style="color: {{main_color}};">工程实例</view>
            <view class="en">CASE</view>
            <navigator data-channel="photo" data-params="rid=20" url='' bind:tap="navigatorTap" class="more" style="color: #333;">查看更多</navigator>
        </view>
        <view class="case-list mt-50 w-100">
            <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" duration="{{duration}}" circular="{{circular}}"  previous-margin="120rpx" next-margin="120rpx" bindchange="bindchange" indicator-active-color="{{main_color}}">
                <block wx:for="{{case_img}}" wx:key="id">
                    <swiper-item>
                        <image src="{{item.images_s}}" class="case_img  {{swiperIdx == index ? 'active' : 'quiet'}}" mode="{{fill}}" bindtap="viewimg" data-img="{{item.images_s}}"></image>
                        <text class="p mt-20 font-over1">{{item.title}}</text>
                    </swiper-item>
                </block>
            </swiper>
        </view>
    </view>
    <veiw class="box-product w-100">
        <view class="b-title text-center">
            <view class="cn" style="color: {{main_color}};">产品展示</view>
            <view class="en">Product display</view>
            <view class="line"></view>
        </view>
        <block wx:for="{{productClass_list}}" wx:key="class_id">
            <view class="product-list mt-50">
                <view class="T flex" style="background-image: url({{item.images_s}});">
                    <view class="R title">
                        <text class="cn">{{item.title}}</text>
                        <text class="en">{{item.title_en}}</text>
                        <view class="more mt-40" bindtap="linkToClass" data-cid="{{item.class_id}}">查看更多</view>
                    </view>
                </view>

                <view class="w-93 m-ot list-box mt-30 flex flex-wrap">
                    <block wx:for="{{hotProduct}}" wx:for-item="cell" wx:key="id"  wx:if="{{item.class_id == cell.class_id}}">
                        <navigator class="list-item" data-channel="product_detail" data-params="id={{cell.id}}" bind:tap="navigatorTap" url="">
                            <image src="{{cell.img}}" class="img" mode="{{fill}}"></image>
                            <view class="txt">
                                <text class="f-28 c-444 font-over1 lh-18 w-100">{{cell.title}}</text>
                            </view>
                        </navigator>
                    </block>
                </view>
            </view>
        </block>
    </veiw>
    <view class="box-news w-100 mt-70">
        <view class="w-93 m-ot">
            <view class="title">
                <view class="cn" style="color: {{main_color}};">新闻资讯</view>
                <view class="en">NEWS</view>
            </view>
            <view class="news-list mt-30">
                <navigator wx:for="{{newsList}}" wx:key="id" class="news-item flex" data-channel="news_detail" data-params="id={{item.id}}" bind:tap="navigatorTap" url="">
                    <view class="txt">
                        <view class="font-over2 f-28 c-333">{{item.title}}</view>
                        <view class="f-26 c-999 mt-30">{{item.addtime}}</view>
                    </view>
                    <image class="img" src="{{item.images ? item.images : 'http://qs.demo.pbinfo.cn/wxapp/xcx-002/img/nopic.jpg' }}" mode="{{fill}}"></image>
                </navigator>
            </view>
        </view>
        <navigator data-channel="news" data-params="" url='' bind:tap="navigatorTap" class="viewmore mt-40" style="background-color: {{main_color}};">查看更多</navigator>
    </view>
    <view class="box-message message w-100">
        <view class="b-title text-center">
            <view class="cn" style="color: #fff;">在线留言</view>
            <view class="en">Message</view>
            <view class="line"></view>
        </view>
        <view class="w-93 m-ot mt-50">
            <form bindsubmit="formSubmit" >
                <view class="page-section flex flex-X">
                  <view class="page-section-title">姓名</view>
                  <view class="weui-cells weui-cells_after-title">
                    <view class="weui-cell weui-cell_input">
                      <view class="weui-cell__bd" >
                        <input class="weui-input" name="linkman" placeholder="请输入姓名" value="{{linkman}}"/>
                      </view>
                    </view>
                  </view>
                </view>
                <view class="page-section flex flex-X">
                  <view class="page-section-title">联系电话</view>
                  <view class="weui-cells weui-cells_after-title">
                    <view class="weui-cell weui-cell_input">
                      <view class="weui-cell__bd" >
                        <input class="weui-input" name="mobile" placeholder="请输入联系电话"  value="{{mobile}}"/>
                      </view>
                    </view>
                  </view>
                </view>
                <view class="btn-area">
                  <button hover-class='none' formType="submit" style="color:{{main_color}};">立即提交</button>
                </view>
            </form>
        </view>
    </view>

</view>
