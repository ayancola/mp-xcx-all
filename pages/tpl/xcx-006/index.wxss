/**index.wxss**/
.banner{width: 100%;}
.banner swiper{width: 100%;height: 750rpx;}
.banner swiper .wx-swiper-dot,.box3 swiper .wx-swiper-dot,.box4 swiper .wx-swiper-dot{background-color: #e5e5e5;width: 45rpx;height: 8rpx;
	border-radius: 20rpx;
}
.banner swiper .wx-swiper-dots.wx-swiper-dots-horizontal{bottom: 30rpx;}
.banner image{height: 750rpx; width: 100%;}
.viewmore{border-radius: 1em !important;}

.title{line-height: 1.5;position: relative;background-size: cover;}
.title .cn{line-height: 48rpx;color: #fff;font-size: 42rpx;display: block;text-align: center;
	background: center no-repeat;background-size: auto 22rpx;
	background-image: url(http://qs.demo.pbinfo.cn/wxapp/xcx-006/img/tbg.png);
}
.box3 .title .cn,.box5 .title .cn{background-image: url(http://qs.demo.pbinfo.cn/wxapp/xcx-006/img/tbg2.png);color: #4c4c4c;}
.box2 .title {background-image: url(http://qs.demo.pbinfo.cn/wxapp/xcx-006/img/pbg.jpg);padding: 50rpx;}
.box4 .title {background-image: url(http://qs.demo.pbinfo.cn/wxapp/xcx-006/img/cbg.jpg);padding: 50rpx;}
.box3,.box5{padding-top: 60rpx;border-top: 15rpx solid #f5f5f5;}

.box1 .product-class{position: relative;}
.box1 .list-item image{display: block;height: 100%;}
.box1 .list-item{width: 48.5%;height: 250rpx;border: 1px solid #e5e5e5;box-sizing: border-box;margin-bottom: 20rpx;border-radius: 15rpx;
	overflow: hidden;position: relative;
}
.box1 .list-item:nth-child(2n){margin-left: 3%;display: block;overflow: hidden;
	position: relative;border-radius: 10rpx;
}
.box1 .txt{position: absolute;top: 15px;left: 20rpx;width: 90%;display: inline-block;}
.box1 .more{font-size: 36rpx;color: #005798;width: 46rpx; height: 46rpx;line-height: 46rpx;border-radius: 50%;margin-top: 15rpx;display: block;
	border: 1px solid #005798;text-align: center;
}

.box2 .list-item{width: 100%; border-radius: 10rpx;box-shadow: 0 0 10px 0 rgba(0,0,0,0.2);border-radius: 10rpx;overflow: hidden;
	padding-bottom: 20rpx;position: relative;
}
.box2 .list-item + .list-item{margin-top: 50rpx;}
.box2 .list-item image{box-sizing: border-box;height: 390rpx;background: #f5f5f5;margin-bottom: 20rpx;}
.box2 .list-item .font-over1{box-sizing: border-box;padding: 0 65rpx 0 30rpx;width: 100%;}
.box2 .btn-right{position: absolute;bottom:15rpx;text-align: center;right: 30rpx;color: #1772b9;font-size: 36rpx;
	width: 56rpx;height: 56rpx;line-height: 56rpx;border: 1px solid #1772b9;border-radius: 50%;
}

.box3 swiper{height: 470rpx;}
.box3 swiper swiper-item{box-sizing: border-box;}
.box3 swiper swiper-item image{width: 100%;height: 340rpx;position: relative;box-sizing: border-box;margin-bottom: 10rpx;}
.box3 swiper swiper-item image.quiet {transform: scale(1.0, 0.7);transition: all 0.2s ease-in 0s;opacity: 0.8;}
.box3 swiper swiper-item text{display: block;width: 100%;height: 40rpx;line-height: 40rpx;text-align: center;color: #4c4c4c;font-size: 30rpx;}
.box3 swiper .wx-swiper-dots.wx-swiper-dots-horizontal{bottom: 20rpx;}

.box4{
	background: center no-repeat;background-size: 100% auto;background-position: center 325rpx;
	background-image: url(http://qs.demo.pbinfo.cn/wxapp/xcx-006/img/cbg_55.jpg);
}
.box4 swiper{height: 380rpx;}
.box4 swiper swiper-item{box-sizing: border-box;}
.box4 swiper swiper-item image{width: 100%;height: 266rpx;position: relative;box-sizing: border-box;margin-bottom: 10rpx;border-radius: 20rpx;}
.box4 swiper swiper-item image.quiet {transform: scale(0.8, 0.5);transition: all 0.2s ease-in 0s;opacity: 0.8;}
.box4 swiper swiper-item text{display: block;width: 100%;height: 40rpx;line-height: 40rpx;text-align: center;color: #4c4c4c;font-size: 30rpx;}
.box4 swiper .wx-swiper-dots.wx-swiper-dots-horizontal{bottom: 20rpx;}


/* 新闻板块 */
.news-list .news-item{width: 100%;overflow: hidden;}
.news-list navigator + navigator{margin-top: 40rpx;}
.news-list .news-item .img{width: 40%;height: 200rpx;margin-right: 5%;}
.news-list .news-item .txt{width: 55%;box-sizing: border-box;position: relative;text-align: left;padding-top: 15rpx;}
