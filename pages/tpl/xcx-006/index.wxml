<!--index.wxml-->
<import src="../../../utils/wxParse/wxParse.wxml" />
<view class="globalNavBar">
    <TabBar iconPath="{{iconUrl}}" current="{{0}}" main_color="{{main_color}}"></TabBar>
</view>
<view class="container">
    <view class="banner">
        <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" duration="{{duration}}"  indicator-active-color="{{main_color}}">
            <block wx:for="{{banner_img}}" wx:key="id">
                <swiper-item>
                    <image src="{{item}}" class="banner_img" mode="{{fill}}"></image>
                </swiper-item>
            </block>
        </swiper>
    </view>
    <view class="box1 mt-60">
        <view class="w-93 m-ot product-class flex flex-wrap">
            <block wx:for="{{productClass_list}}" wx:key="id">
                <view bindtap="linkToClass" class="list-item {{swiperIdx == index ? 'active' : 'quiet'}}" data-cid="{{item.class_id}}">
                    <image src="{{item.images_s}}" class="img" mode="{{fit}}"></image>
                    <view class="txt">
                        <text class="f-28 c-444 font-over1 lh-18 w-100">{{item.title}}</text>
                        <text class="f-22 c-888 font-over2 lh-15 w-100">{{item.title_en}}</text>
                    </view>
                </view>
            </block>
            <view bindtap="linkToClass" class="list-item {{swiperIdx == index ? 'active' : 'quiet'}}" data-cid="{{item.class_id}}">
                <image src="http://qs.demo.pbinfo.cn/wxapp/xcx-006/img/sbg4.jpg" class="img" mode="{{fit}}"></image>
                <view class="txt">
                    <text class="f-28 c-444 font-over1 lh-18 w-100">更多型材</text>
                    <text class="f-22 c-888 font-over2 lh-15 w-100">More Profile</text>
                    <text class="more block">+</text>
                </view>
            </view>
        </view>
    </view>
    <view class="box2 w-100 mt-40">
        <view class="title">
            <text class="cn">产品展示</text>
        </view>
        <view class="w-93 m-ot product-list mt-50 flex flex-wrap">
            <block wx:for="{{hotProduct}}" wx:key="id">
                <navigator class="list-item" data-channel="product_detail" data-params="id={{item.id}}" bind:tap="navigatorTap">
                    <image class="img" src="{{item.img}}" mode="{{fit}}"></image>
                    <view class="txt">
                        <text class="f-26 c-444 font-over1 lh-18 mt-10 w-100">{{item.title}}</text>
                        <view class="btn-right"><text decode="true" >&gt;</text></view>
                    </view>
                </navigator>
            </block>
        </view>
        <navigator data-channel="products" data-params="" bind:tap="navigatorTap" class="viewmore mt-10"  style="background-color:{{main_color}};">查看更多产品</navigator>
    </view>
    <view class="box3 w-100 text-right mt-60"> 
        <view class="title">
            <text class="cn">工程实例</text>
        </view>
        <view class="case-list mt-50 w-100">
            <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" duration="{{duration}}" circular="{{circular}}"  previous-margin="150rpx" next-margin="150rpx" bindchange="bindchangeA" indicator-active-color="{{main_color}}">
                <block wx:for="{{case_img}}" wx:key="id">
                    <swiper-item>
                        <image src="{{item.images_s}}" class="case_img  {{swiperIdx2 == index ? 'active' : 'quiet'}}" mode="{{fill}}" bindtap="viewimg" data-img="{{item.images_s}}"></image>
                        <text class="p mt-10 font-over1">{{item.title}}</text>
                    </swiper-item>
                </block>
            </swiper>
        </view>
        <navigator data-channel="photo" data-params="rid=20" bind:tap="navigatorTap" class="viewmore mt-50" style="background-color:{{main_color}};">查看更多</navigator>
    </view>
    <view class="box4 w-100 text-right mt-80"> 
        <view class="title">
            <text class="cn">厂区环境</text>
        </view>
        <view class="case-list mt-50 w-100">
            <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" duration="{{duration}}" circular="{{circular}}"  previous-margin="200rpx" next-margin="200rpx" bindchange="bindchange" indicator-active-color="{{main_color}}">
                <block wx:for="{{album_img}}" wx:key="id">
                    <swiper-item>
                        <image src="{{item.images_s}}" class="{{swiperIdx == index ? 'active' : 'quiet'}}" mode="{{fill}}" bindtap="viewimgAlbum" data-img="{{item.images_s}}"></image>
                        <text class="p mt-10 font-over1">{{item.title}}</text>
                    </swiper-item>
                </block>
            </swiper>
        </view>
        <navigator data-channel="photo" data-params="rid=20" bind:tap="navigatorTap" class="viewmore mt-50" style="background-color:{{main_color}};">查看更多</navigator>
    </view>
    <view class="box5 mt-70">
        <view class="w-93 m-ot pb-40">
            <view class="title">
                <text class="cn">新闻资讯</text>
            </view>
            <view class="news-list mt-60">
                <navigator wx:for="{{newsList}}" wx:key="id" class="news-item flex" data-channel="news_detail" data-params="id={{item.id}}" bind:tap="navigatorTap">
                    <image class="img" src="{{item.images ? item.images : 'http://qs.demo.pbinfo.cn/wxapp/xcx-002/img/nopic.jpg' }}" mode="{{fill}}"></image>
                    <view class="txt">
                        <view class="font-over2 f-28 c-333">{{item.title}}</view>
                        <view class="f-26 c-999 mt-30">{{item.addtime}}</view>
                    </view>
                </navigator>
            </view>
            <navigator data-channel="news" data-params="" bind:tap="navigatorTap" class="viewmore mt-70"  style="background-color:{{main_color}};">查看更多资讯</navigator>
        </view>
    </view>
</view>