<!--pages/tpl/mp-xcx-009/index.wxml-->
<view class="globalNavBar">
    <TabBar iconPath="{{iconUrl}}" current="{{0}}" main_color="{{main_color}}"></TabBar>
</view>
<view class="container">
    <view class="banner">
        <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" duration="{{duration}}"  indicator-active-color="{{main_color}}">
            <block wx:for="{{banner_img}}" wx:key="id">
                <swiper-item>
                    <image src="{{item}}" class="banner_img" mode="{{fill}}"></image>
                </swiper-item>
            </block>
        </swiper>
    </view>
    <veiw class="box-product w-100">
        <block wx:for="{{productClass_list}}" wx:key="class_id">
            <view class="product-list">
                <view class="bg"></view>
                <view class="T w-93 m-ot flex">
                    <view class="L img"><image src="{{item.images_s}}" mode="{{fit}}"></image></view> 
                    <view class="R title">
                        <text class="cn">{{item.title}}</text>
                        <view class="more mt-40" bindtap="linkToClass" data-cid="{{item.class_id}}"><view class="line"></view> 查看更多 <text decode="true" class="arrow">&gt;</text></view>
                    </view>
                </view>

                <view class="w-93 m-ot list-box mt-30 flex flex-wrap">
                    <block wx:for="{{hotProduct}}" wx:for-item="cell" wx:key="id"  wx:if="{{item.class_id == cell.class_id}}">
                        <navigator class="list-item" data-channel="product_detail" data-params="id={{cell.id}}" bind:tap="navigatorTap">
                            <image src="{{cell.img}}" class="img" mode="{{fill}}"></image>
                            <view class="txt">
                                <text class="f-28 c-444 font-over1 lh-18 w-100">{{cell.title}}</text>
                            </view>
                        </navigator>
                    </block>
                </view>
            </view>
        </block>
    </veiw>
    <navigator class="box-banner w-100 mt-40" style="border-color:{{main_color}};" url="" data-channel="contact" data-params="" bind:tap="navigatorTap">
        <image src="http://qs.demo.pbinfo.cn/wxapp/xcx-009/img/bga2_02.jpg" mode="{{fill}}"></image>
    </navigator>
    <view class="box-news w-100 mt-70">
        <view class="w-93 m-ot">
            <view class="title">
                <view class="cn">新闻资讯</view>
                <navigator url='' data-channel="news" data-params="" class="more" bind:tap="navigatorTap" style="color: #333;">查看更多 <text decode="true" class="arrow" style="border-color:{{main_color}};color:{{main_color}};">&gt;</text></navigator>
            </view>
            <view class="news-list mt-60">
                <navigator wx:for="{{newsList}}" wx:key="id" class="news-item flex" data-channel="news_detail" data-params="id={{item.id}}" bind:tap="navigatorTap" url="">
                    <image class="img" src="{{item.images ? item.images : 'http://qs.demo.pbinfo.cn/wxapp/xcx-002/img/nopic.jpg' }}" mode="{{fill}}"></image>
                    <view class="txt">
                        <view class="font-over2 f-28 c-333">{{item.title}}</view>
                        <view class="f-26 c-999 mt-30">{{item.addtime}}</view>
                    </view>
                </navigator>
            </view>
        </view>
    </view>


</view>
