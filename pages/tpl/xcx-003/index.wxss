/**index.wxss**/
/* 首页板块标题 */
/* banner轮播图 */
.banner{width: 100%;}
.banner swiper{width: 100%;height: 450rpx;}
.banner swiper .wx-swiper-dot{background-color: #e5e5e5;width: 45rpx;height: 8rpx;border-radius: 20rpx;}
.banner swiper .wx-swiper-dots.wx-swiper-dots-horizontal{bottom: 30rpx;}
.banner image{height: 450rpx; width: 100%;}

.title{text-align: center;line-height: 1.5;position: relative;
	background: url(http://qs.demo.pbinfo.cn/wxapp/xcx-003/img/tbg.png) center no-repeat;background-size: auto 4rpx;
}
.title .cn{line-height: 48rpx;color: #333333;font-size: 36rpx;display: block;text-align: center;font-weight: bold;}
.viewmore{border-top: 1px solid #f5f5f5;}

.box1{border-bottom: 10rpx solid #eeeeee;padding-bottom: 60rpx;}
.box1 .txt image{margin: 10rpx 0;}

.ab_honor .album_con swiper{height: 260rpx;}

.box2 .product-class swiper{height: 175rpx;}
.box2 .product-class swiper swiper-item .img{width: 95%;height: 175rpx;margin: 0 auto;display: block;}
.box2 .product-class swiper .wx-swiper-dot{display: none;}
.box2 .list-item{position: relative;border-radius: 10rpx;overflow: hidden;}
.box2 .txt{position: absolute;left: 2.5%;top: 0;background: rgba(0,0,0,0.6);padding: 10rpx;box-sizing: border-box;height: 100%;width: 95%;border-radius: 10rpx;}
.box2 text{margin-top: 50%;transform: translateY(-1.6em);}

.box3 {padding:70rpx 0;background: #f5f5f5;}
.box3 .list-item{box-sizing: border-box;padding: 20rpx;border-radius: 10rpx;overflow: hidden;
	box-shadow: 0 1rpx 15rpx 0 rgba(0,0,0,0.2);background: #fff;
}
.box3 .product-list navigator + navigator{margin-top: 40rpx;}
.box3 .img{width: 48%;height: 200rpx;border-radius: 10rpx;margin-right: 5%;}
.box3 .txt{width: 47%;box-sizing: border-box;position: relative;text-align: left;padding-top: 20rpx;}
.box3 .txt .p{font-size: 36rpx;color: #333;border-bottom: 1px solid #dcdcdc;line-height: 1.8;padding-bottom: 15rpx;}
.box3 .txt .span{font-size: 26rpx;color: #808080;display: none;margin: 0.8em 0;}
.box3 .txt .a{display: block;width: 58rpx;height: 25rpx;margin-top: 40rpx;
	background: url(http://qs.demo.pbinfo.cn/wxapp/xcx-003/img/more.png) center no-repeat;background-size: contain;
}

/* 新闻板块 */
.box4 .title{text-align: left;}
.news-list .news-item{width: 100%;overflow: hidden;}
.news-list navigator + navigator{margin-top: 40rpx;}
.news-list .news-item .img{width: 40%;height: 200rpx;margin-right: 5%;}
.news-list .news-item .txt{width: 55%;box-sizing: border-box;position: relative;text-align: left;padding-top: 15rpx;}
