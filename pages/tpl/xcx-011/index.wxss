/**index.wxss**/

.banner{width: 100%;}
.banner swiper{width: 100%;height: 600rpx;}
.banner swiper .wx-swiper-dot,.box-case swiper .wx-swiper-dot{background-color: rgba(255,255,255,0.3);width: 45rpx;height: 8rpx;border-radius: 20rpx;}
.banner swiper .wx-swiper-dots.wx-swiper-dots-horizontal{bottom: 30rpx;}
.banner image{height: 600rpx; width: 100%;}
.viewmore{border-radius: 5rpx !important;width: 6em;}

.title{line-height: 1.5;position: relative;line-height: 36rpx;}
.title .cn{color: #333333;font-size: 36rpx;display: inline-block;padding-left: 22rpx;border-left: 4rpx solid #00895c;margin-right: 0.3em;}
.title .en{font-size: 24rpx;color: #999999;display: inline-block;}
.title .more{position: relative;text-align: center;font-size: 28rpx;color: #00895c;background: #fff;border-radius: 10rpx;padding: 5rpx 0;
	margin-top: 40rpx;width: 6em;display: block;
}
.arrow{width: 40rpx;height: 40rpx;border: 1px solid #c2182f;border-radius: 50%;text-align: center;line-height: 38rpx;color: #c2182f; display: block;
	position: absolute;right: 0;top: 50%;transform: translateY(-50%);box-sizing: border-box;font-family: 'sans-serif;';
}
.i1{padding: 50rpx 0;border-bottom: 15rpx solid #e5e5e5;}
.i1 view{height: 120rpx;}
.i1 navigator{width: 25%;}
.i1 text{margin-top: 14rpx;}

.box-case{padding-top: 60rpx;border-top: 15rpx solid #e5e5e5;}
.box-case swiper{height: 480rpx;}
.box-case swiper swiper-item{box-sizing: border-box;}
.box-case swiper swiper-item image{width: 100%;height: 410rpx;position: relative;box-sizing: border-box;margin-bottom: 10rpx;opacity: 1;
	box-shadow: 0 0 10px 0 rgba(0,0,0,0.2);border-radius: 10rpx;overflow: hidden;
}
.box-case swiper swiper-item image.quiet {transform: scale(1.0, 0.7);transition: all 0.2s ease-in 0s;opacity: 0.7;}
.box-case swiper swiper-item text{display: block;width: 100%;height: 40rpx;line-height: 40rpx;text-align: center;color: #4c4c4c;font-size: 30rpx;}
.box-case swiper .wx-swiper-dots.wx-swiper-dots-horizontal{bottom: 20rpx;display: none;}

.box1{padding-bottom: 60rpx;border-bottom: 15rpx solid #e5e5e5;}
.box1 .list-box{padding-left: 2.5%;box-sizing: border-box;width: 100%;position: relative;}
.box1 .title .more{position: absolute;right: 0;bottom: 0;width: auto;color: #fff;background: #00895c;
	border-radius: 5rpx;padding: 0.2em 0.6em;display: block;
}
.box1 swiper {height: 380rpx;}
.box1 swiper-item {height: 380rpx;}
.box1 .list-item{display: block;width: 316rpx; height: 380rpx;overflow: hidden;position: relative;border-radius: 10rpx;padding-right: 20rpx;box-sizing: border-box;}
.box1 .list-item .img{width: 100% ;height: 100%;display: block;border-radius: 10rpx;}
.box1 .list-item .txt{z-index: 1;position: absolute;bottom: 0;left: 0;box-sizing: border-box;
	background: rgba(0,0,0,0.25);text-align: center;height: 100%;padding: 160rpx 5% 0 5%;border-radius: 10rpx;right: 20rpx;
}

.box2{position: relative;z-index: 1;overflow: hidden;}
.box2 .list-box{position: relative;z-index: 1;}
.box2 .list-item{width: 47.5%;margin-bottom: 46rpx;}
.box2 .list-item:nth-child(2n){margin-right: 5%;}
.box2 .list-item .img{height: 307rpx !important;border-radius: 10rpx;overflow: hidden;background: #fff;margin-top: 30rpx;}
.box2 .list-item:first-child{margin-right: 0;float: none;width: 100%;}
.box2 .list-item:first-child image{width: 100%;}

.box3{border-bottom: 1px solid #cbcbcb;padding-bottom: 60rpx;}
.box3 .line{width: 30%;background: #00895c;height: 1px;display: block;margin: 10rpx auto 0 auto;}
.box3 .img{border-radius: 10rpx;height: 424rpx;width: 100%;}
.box4 .T{height: 424rpx;width: 100%;}
.box4 .B .img{width: 40% !important; height: 60rpx !important;}
.box4 .B .R{width: 55%;margin-left: 5%;}
.box4 .B .R text{display: block;}

/* 新闻板块 */
.box-news{padding-top: 60rpx; padding-bottom: 60rpx;border-top: 15rpx solid #e5e5e5;}
.news-list .news-item{width: 100%;overflow: hidden;padding: 40rpx 0;border-top: 1px solid #d2d2d2;}
.news-list navigator:last-child{border-bottom: 1px solid #d2d2d2;}
.news-list .news-item .img{width: 40%;height: 200rpx;margin-right: 5%;}
.news-list .news-item .txt{width: 55%;box-sizing: border-box;position: relative;text-align: left;padding-top: 15rpx;}
.box-news .more{position: absolute;right: 0;bottom: 0;width: auto;color: #4d4d4d;}

