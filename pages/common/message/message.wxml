<view class="message w-93 m-ot pb-40">
  <view class="message_head" style="color:{{main_color}};">在线留言</view>
  <form bindsubmit="formSubmit">
    <view class="page-section">
      <view class="page-section-title">姓名<text class="mustBe">*</text></view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd" >
            <input class="weui-input" name="linkman" placeholder="请输入姓名" value="{{linkman}}"/>
          </view>
        </view>
      </view>
    </view>
    <view class="page-section">
      <view class="page-section-title">联系电话<text class="mustBe">*</text></view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd" >
            <input class="weui-input" name="mobile" placeholder="请输入联系电话"  value="{{mobile}}"/>
          </view>
        </view>
      </view>
    </view>
    <view class="page-section">
      <view class="page-section-title">公司名称<text>*</text></view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd" >
            <input class="weui-input" name="company" placeholder="请输入公司名称" value="{{company}}"/>
          </view>
        </view>
      </view>
    </view>
    <view class="page-section">
      <view class="page-section-title">留言内容<text class="mustBe">*</text></view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd" >
            <textarea class="mag_textarea" name="content" auto-height placeholder="请输入留言内容" value="{{content}}"/>
          </view>
        </view>
      </view>
    </view>
    <view class="btn-area">
      <button hover-class='none' formType="submit" style="background-color:{{main_color}};">立即提交</button>
    </view>
  </form>
</view>
