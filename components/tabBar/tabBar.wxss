/* components/tabBar/tabBar.wxss */

.tabBar-icon {
    width: 54rpx;
    height: 54rpx;
}

.tabBarContainer {
    position: fixed;
    z-index: 9999;
    box-sizing: border-box;
    width: 750rpx;
    left: 0;
    bottom: 0;
    background: #F7F7FA;
    box-shadow: 3rpx 3rpx 3rpx 3rpx #aaa;
    padding-bottom: constant(safe-area-inset-bottom);
    /*兼容 IOS<11.2*/
    padding-bottom: env(safe-area-inset-bottom);
    /*兼容 IOS>11.2*/
}

.tabBar {
    width: 100%;
    height: 114rpx;
    padding: 10rpx;
    box-sizing: border-box;
}

.tabBar-item {
    float: left;
    width: 20%;
    text-align: center;
    overflow: hidden;
}

.tabBar-item image {
    display: inline-block;
}

/*当前字体颜色*/

.tabBartext {
    color: #1677fe;
}

button:not([size=mini]) {
    margin-left: 0;
    margin-right: 0;
    padding-left: 0;
    padding-right: 0;
    padding: 0;
    margin: 0;
    width: 100%;   
    font-weight: 500;
    font-size: 24rpx;
    color: #8A8A8A;
}

button:not([size=mini]).tabBar_button_hover {
    background-color: rgba(0, 0, 0, 0.05);
}